.page.index {
    text-align: center;
    height: 100vh;
    position: relative;
}

.page.index .bg-img {
    z-index: -1;
    position: absolute;
}

.page.index .left {
    float: left;
}

.page.index .above .bg-img {
    top: 0;
    left: 0;
    width: 750rpx;
    height: 420rpx;
}

.page.index .above .today-finished {
    z-index: 1;
    margin: 0 auto;
    height: 310rpx;
    padding-top: 50rpx;
    box-sizing: border-box;
}

.page.index .above .today-finished .number {
    font-size: 100rpx;
    font-family: PingFang-SC-Bold;
    font-weight: bold;
    color: rgba(255, 255, 255, 1);
}

.page.index .above .today-finished .text {
    font-size: 32rpx;
    font-family: PingFang-SC-Medium;
    font-weight: 500;
    color: rgba(215, 252, 255, 1);
}

.enter image {
    width: 45px;
    height: 45px;
    background-color: #ccc;
}

button[text-primary] {
    color: rgb(0, 183, 248);
}

button[text-primary]:hover, .button-hover[type=primary] {
    color: rgba(255, 255, 255, 0.6);
    background-color: rgb(0, 183, 245) !important;
}
