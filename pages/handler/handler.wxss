/* pages/handle/handle.wxss */

.deal-form {
    color: #666;
    font-size: 14px;
    padding-bottom: 50px;
}

.df-block {
    background-color: #fff;
    padding: 40rpx 34rpx 30rpx;
    margin-bottom: 24rpx;
}

.deal-result-btns {
    position: fixed;
    bottom: 0;
    width: 100%;
}
.deal-result-btns > .btn {
    position: relative;
    border-radius: 0;
    border: 0;
}

.deal-result-btns > .btn::after {
    content: '';
    border: 0;
}
.se_ {
    width: 1px;
    height: 20px;
    margin-top: 12px;
    background-color: #fff;
}


.deal-form .label-title {
    font-size: 15px;
    font-weight: bold;
}

.device-info {
    padding: 40rpx 34rpx;
}

.device-info .info-item {
    min-width: 50%;
    padding: 10rpx 10rpx 10rpx 0;
    box-sizing: border-box;
    float: left;
}

.select-type {
    padding: 20rpx 34rpx;
}

.select-type .label-title {
    float: left;
    width: 200rpx;
}

.select-type .select-value {
    float: left;
    width: calc(100% - 200rpx);
    text-align: right;
}

.key-in {
    margin: 20rpx -30rpx;
    margin-bottom: 0;
}

/* 组件内部定制 Start */

.weui-cell:before {
    border: 0rpx;
}

.weui-cells:before, .weui-cells:after {
    border: 0rpx;
}

.woui-textarea {
    background-color: #f4f4f4;
    margin: auto 15px;
    padding: 24rpx 16rpx !important;
}

.weui-uploader__bd {
    margin: 0;
}
radio-group > label {
    width: 100px;
    float: left;
}

radio-group {
    overflow: hidden;
}
/* 组件内部定制 End */
