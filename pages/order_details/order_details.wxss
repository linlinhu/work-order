/** 退回模态窗口样式*/
.modal-wrap {
    position: fixed;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background-color: rgba(0, 0, 0, .2);
    z-index: 999;
}

.modal-wrap > .content {
    width: 82%;
    height: 480rpx;
    background-color: #fff;
    border-radius: 10px;
    position: absolute;
    top: 50%;
    margin-top: -240rpx;
    left: 9%;
    overflow: hidden;
}

.modal-wrap > .content .top {
    padding: 15px 0;
    text-align: center;
    height: 16px;
    line-height: 16px;
    font-size: 16px;
    color: #333;
    font-weight:500;
}

.modal-wrap > .content .center {
    height: calc(100% - 90px);
    padding: 0 15px 15px 15px;
    box-sizing: border-box;
}

.modal-wrap > .content .center textarea {
    background-color: #f4f4f4;
    width: 100%;
    height: 100%;
    font-size: 26rpx;
    padding: 16rpx;
    box-sizing: border-box;

}

.modal-wrap > .content .bot button.btn {
    background-color: #fff;
    color: #18A4FC;
    border-right: 1px solid #ddd;
    border-top: 1px solid #ddd;
}

.modal-wrap > .content .bot button.btn:last-child {
    border-right: 0;
}
