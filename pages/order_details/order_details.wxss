/* 追踪 bengin */

.order-details .time-cue {
    padding: 48rpx 60rpx;
    font-size: 26rpx;
}

.order-details .time-cue .cue {
    position: relative;
    padding-left: 30rpx;
    padding-bottom: 40rpx;
}

.order-details .time-cue .cue:last-child {
    padding-bottom:0;
}

.order-details .time-cue .cue::before {
    content: '';
    height: 100%;
    border-left: 2px solid #ddd;
    position: absolute;
    left: -4rpx;
    top: 14rpx;
}
.order-details .time-cue .cue.orange::before {
    border-left: 2px dashed #ddd;
}
.order-details .time-cue .cue.orange .below::before {
    content: '';
    height: 24rpx;
    width:24rpx;
    position: absolute;
    background: #ffffff;
    left: -14rpx;
    bottom: -14rpx;
}

.order-details .time-cue .cue::after {
    position: absolute;
    top: 12rpx;
    left: -15rpx;
    content: '';
    width: 20rpx;
    height: 20rpx;
    border: 5rpx solid #ff5745;
    border-radius: 100% 100%;
    background: #fff;
}

.order-details .time-cue .blue::after {
    border-color: #299ff8;
}

.order-details .time-cue .green::after {
    border-color: #1cea51;
}

.order-details .time-cue .above {
   padding-bottom: 10rpx;
   padding-left: 10rpx;
}

.order-details .time-cue .above .title {
    padding-right: 38rpx;
    font-size: 30rpx;
    font-weight: bold;
    color: #333;
}

.order-details .time-cue .below text {
    display: inline-block;
    min-width: calc(50% - 10rpx);
    padding: 8rpx 0 8rpx 10rpx;
}
.order-details .cue .wrap image {
   height: 180rpx;
   width: 180rpx;
   margin: 5rpx 10rpx;
}
.order-details .time-cue .no-data {
    text-align:center;
    margin:60rpx 0;
}

/* 追踪 end */

.abnormal-location {
    width: 100vw;
    height: calc(100vh - 200rpx);
    position: relative;
}

.abnormal-location .switch {
    position: absolute;
    padding: 8px 15px;
    height: 14px;
    line-height: 14px;
    font-size: 14px;
    border-radius: 15px 0 0 15px;
    box-shadow: 2px 1px 10px #ccc;
    right: 0px;
    top: 16px;
    z-index: 9;
    background-color: #fff;
    color: #2f97e6;
}

.abnormal-location .switch > image {
    width: 12px;
    height: 12px;
    margin-right: 3px;
    vertical-align: middle;
}

