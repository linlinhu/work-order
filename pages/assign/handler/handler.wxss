/* pages/assign/handler/handler.wxss */
.page.assign {
  background: #ffffff;
  min-height: 100vh;
}
.page.assign .weui-panel::after {
  border:0;
}
/* .page.assign .weui-panel .weui-media-box {
  padding-bottom: 15rpx;
} */
.page.assign .weui-panel .weui-media-box__title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333333;
}
.page.assign .weui-panel .weui-media-box__desc {
  height: 38rpx;
  position: relative;
  font-size: 28rpx;
  color: #666666;
}
.page.assign .weui-panel .weui-media-box__desc image {
  position: absolute;
  width: 38rpx;
  height: 38rpx;
  right: 20rpx;
  top: 0px;
}
.page.assign .weui-panel textarea {
  box-sizing: border-box;
  width: 100%;
  height:300rpx; 
  padding: 24rpx 16rpx;
  background: #f4f4f4;
  font-size: 28rpx;
  color: #666666;
}
.page.assign button {
  position: fixed;
  width: 100%;
  bottom: 0;
  border-radius: 0;
}
.form {
  height: calc(100vh - 44px);
}