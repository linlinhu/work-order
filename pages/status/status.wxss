/* pages/status/status.wxss */
@import "/style/order_search.wxss";
@import "/style/device_exception.wxss";
.page {
    background: #fff;
    padding-top: 32rpx;
}

/* .page.status scroll-view {
    height:calc(100vh - 120rpx);
    box-sizing:border-box;
