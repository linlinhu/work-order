/* components/sheetModal/sheet.wxss */
@import "../../base/libs/weui.wxss";

.sheet-modal {
    position: fixed;
    height: 548rpx;
    width: 100%;
    bottom: 0;
    border-radius: 0;
    background-color: #fff;
    z-index: 10000;
}

.sheet-modal .sheet-modal-title {
    font-size: 34rpx;
    font-family: PingFang-SC-Bold;
    --font-weight: bold;
    color: rgba(51, 51, 51, 1);
    line-height: 60px;
    text-align: center;
}

.sheet-modal .sheet-modal-title::after {
    content: " ";
    position: absolute;
    top: 96rpx;
    border-bottom: 4rpx solid #18a4fc;
    color: #18a4fc;
    left: 34rpx;
    right: 34rpx;
}

.sheet-modal-inner {
    margin: 0;
}

/* ::-webkit-scrollbar {
    width: 0;
    height: 0;
    color: transparent;
} */

.sheet-check-area .weui-cell::before,
.sheet-check-area .weui-cell::after {
    border: 0;
}

.sheet-check-area .weui-cell {
    padding: 6px 15px;
}

.sheet-btn-area {
    position: fixed;
    width: 100%;
    bottom: 0;
    border-radius: 0;
}

.sheet-btn-area button {
    border-radius: 0;
    height: 88rpx;
}
