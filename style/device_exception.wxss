.device-exception-tpl {
    padding: 30rpx 20rpx;
    margin-bottom: 24rpx;
    background: #fff;
}

.device-exception-tpl .above text,
.device-exception-tpl .below text {
    display: inline-block;
    min-width: 320rpx;
    padding: 5rpx 17rpx;
    font-size: 28rpx;
    font-family: PingFang-SC-Medium;
    color: #666;
    white-space: nowrap;
    overflow: hidden;
    text-overflow: ellipsis;
}
.device-exception-tpl .above .title {
    font-size: 30rpx;
    font-family: PingFang-SC-Bold;
    font-weight: bold;
    color: rgba(51, 51, 51, 1);
    line-height: 60rpx;
}
.device-exception-tpl .above .order-number {
    font-size: 24rpx;
    color: #999999;
    line-height: 60rpx;
}
