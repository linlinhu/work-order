/* components/calendar/calendar.wxss */
@import '/style/weui.wxss';
.calendar {
  background-color: #fff;
  height: 100vh;
  position: relative;
  color: #666;
}
.range-type {
  padding: 15px 9px;
}

.range-type > view {
  margin: 0 8px;
  text-align: center;
  height: 35px;
  line-height: 35px;
  border-radius: 6px;
  background-color: #f4f4f4;
  font-size: 13px;
}
.calendar .title {
  background-color: #eee;
  border-bottom: 1px solid #ddd;
  text-align: center;
  padding: 8px;
}
.calendar .date-show {
  padding: 0 8px;
  background-color:#f5f5f5;
}

.calendar .date-show > view {
  padding:8px;
  border-bottom:3px solid #eee;
  text-align: center;
}

.calendar .date-show > view.active {
  border-color: rgb(0, 183, 248);
}
.calendar .week-title {
  font-size: 12px;
  text-align: center;
  border-bottom: 1px solid #ddd;
  padding: 5px 1%;
  color: #666;
}

.calendar .month-title {
  text-align: center;
  font-size: 14px;
  padding: 10px;
}
.calendar .day-row {
  display: block;
  overflow: hidden;
}
.calendar .day-row > view {
  width: 14%;
  float: left;
  text-align: center;
  height: 45px;
  line-height: 45px;
}
.calendar .month_block {
  border-bottom: 1px solid #ddd;
}
.calendar .month_block:last-child {
  border: 0;
}
scroll-view {
  height: calc(100vh - 139px);
  padding-bottom: 80px;
  box-sizing: border-box;
}
.calendar .date-start,
.calendar .date-end {
  background-color: rgb(0, 183, 248);
  color: #fff;
}

