
@import '/style/weui.wxss';
.top-date-oper {
    position: relative;
}
.filter-block {
    padding: 32rpx 34rpx;
    border-top: 1px solid #ddd;
    background-color: #fff;
    color: #666;
}
.filter-block .tip {
    height: 14px;
    line-height: 14px;
    font-size: 14px;
    color: #333;
    font-weight: 500;
}

.filter-block .sub-tip {
    font-size: 13px;
    color: #999;
}

.filter-block .detail {
    padding: 24rpx 0 32rpx;
}

.filter-block button {
    margin: 0 12rpx;
    height: 80rpx;
    font-size: 14px;
    line-height: 80rpx;

}
.filter-block .btns {
    margin: 0 -12rpx;
}
.top-date-oper .info {
    text-align: center;
    padding: 30rpx 0;
    font-size: 30rpx;
    line-height: 30rpx;
    background-color: #fff;
}

.top-date-oper button.confirm {
    min-width: 150rpx;
    width: 150rpx;
    margin: 0;
    padding: 0;
    color:#FFFFFF;
    background-color:rgb(0, 166, 254);
}
.top-date-oper .pick-date {
    background-color: #f4f4f4;
    border-radius: 12rpx;
    height: 40px;
    margin: 0 16rpx;
    box-sizing: border-box;
    font-size: 28rpx;
    line-height: 28rpx;
    padding: 28rpx 50rpx 28rpx 30rpx;


}
.top-date-oper .fold-area {
    height: calc(100vh - 45px);
    background-color: rgba(0, 0, 0, .2);
    position: absolute;
    width: 100vw;
    top: 45px;
}

.info > text,
.picker > text {
    position: relative
}
.picker > text::after,
.info > text::after {
    content: '';
    width: 10rpx;
    height: 10rpx;
    display: block;
    position: absolute;
    border: 1px solid #333;
    background: transprant;
    transform: rotate(-135deg);
    border-bottom: 0;
    border-right: 0;
    right: -24rpx;
    top: 10rpx;
}
.infoed > text::after {
    transform: rotate(45deg);
    top: 18rpx;
}

button.checked-range {
    background-color: #ECF8FF;
    color:  #18A4FC;
}
.deal-ranges {
    position: relative;
}

.deal-ranges image {
    width: 38rpx;
    height: 38rpx;
    position: absolute;
    bottom: 0;
    right: 12rpx;
}
